@code {
    private LoginModel loginModel = new();
    private TwoFactorModel twoFactorModel = new();
    private bool showTwoFactorStep = false;
    private bool isLoading = false;
    private string? errorMessage;
    private string? successMessage;
    private Guid? currentUserId;
    private string? currentUserEmail;
    private string? currentUserRole;

    private async Task HandleLogin()
    {
        errorMessage = null;
        successMessage = null;
        isLoading = true;

        try
        {
            // Buscar tenant pelo c贸digo
            var tenant = await TenantService.GetTenantByCodeAsync(loginModel.TenantCode);
            if (tenant == null)
            {
                errorMessage = "C贸digo do tenant inv谩lido";
                return;
            }

            // Tentar fazer login
            var (success, message, user) = await AuthService.LoginUserAsync(
                loginModel.Email, 
                loginModel.Password, 
                tenant.TenantId);

            if (!success || user == null)
            {
                errorMessage = message;
                return;
            }

            // Se o usu谩rio tem 2FA habilitado, mostrar tela de 2FA
            if (user.IsTwoFactorEnabled)
            {
                currentUserId = user.UserId;
                currentUserEmail = user.Email;
                currentUserRole = user.Role;

                // Gerar c贸digo 2FA
                await AuthService.GenerateTwoFactorCodeAsync(user.UserId);
                
                showTwoFactorStep = true;
                successMessage = "C贸digo de autentica莽茫o enviado para seu email";
            }
            else
            {
                // Login direto sem 2FA
                await SignInUser(user.UserId, user.Email, user.Role, tenant.TenantId);
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao fazer login: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleTwoFactorVerification()
    {
        errorMessage = null;
        isLoading = true;

        try
        {
            if (currentUserId == null)
            {
                errorMessage = "Sess茫o expirada. Por favor, fa莽a login novamente.";
                CancelTwoFactor();
                return;
            }

            var (success, message) = await AuthService.VerifyTwoFactorCodeAsync(
                currentUserId.Value, 
                twoFactorModel.Code);

            if (!success)
            {
                errorMessage = message;
                return;
            }

            // Buscar tenant novamente
            var tenant = await TenantService.GetTenantByCodeAsync(loginModel.TenantCode);
            if (tenant == null)
            {
                errorMessage = "Erro ao recuperar informa莽玫es do tenant";
                return;
            }

            // Login bem-sucedido
            await SignInUser(currentUserId.Value, currentUserEmail!, currentUserRole!, tenant.TenantId);
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao verificar c贸digo: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task SignInUser(Guid userId, string email, string role, Guid tenantId)
    {
        try
        {
            var claims = new List<Claim>
            {
                new Claim(ClaimTypes.NameIdentifier, userId.ToString()),
                new Claim(ClaimTypes.Email, email),
                new Claim("role", role),
                new Claim("tenantId", tenantId.ToString())
            };

            var claimsIdentity = new ClaimsIdentity(claims, Microsoft.AspNetCore.Authentication.Cookies.CookieAuthenticationDefaults.AuthenticationScheme);
            var claimsPrincipal = new ClaimsPrincipal(claimsIdentity);

            var httpContext = HttpContextAccessor.HttpContext;
            if (httpContext != null)
            {
                await httpContext.SignInAsync(
                    Microsoft.AspNetCore.Authentication.Cookies.CookieAuthenticationDefaults.AuthenticationScheme,
                    claimsPrincipal,
                    new Microsoft.AspNetCore.Authentication.AuthenticationProperties
                    {
                        IsPersistent = true,
                        ExpiresUtc = DateTimeOffset.UtcNow.AddMinutes(30)
                    });

                Navigation.NavigateTo("/home", forceLoad: true);
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao autenticar: {ex.Message}";
        }
    }

    private void CancelTwoFactor()
    {
        showTwoFactorStep = false;
        twoFactorModel = new();
        currentUserId = null;
        currentUserEmail = null;
        currentUserRole = null;
        errorMessage = null;
        successMessage = null;
    }

    public class LoginModel
    {
        [Required(ErrorMessage = "C贸digo do tenant 茅 obrigat贸rio")]
        public string TenantCode { get; set; } = string.Empty;

        [Required(ErrorMessage = "Email 茅 obrigat贸rio")]
        [EmailAddress(ErrorMessage = "Email inv谩lido")]
        public string Email { get; set; } = string.Empty;

        [Required(ErrorMessage = "Senha 茅 obrigat贸ria")]
        public string Password { get; set; } = string.Empty;
    }

    public class TwoFactorModel
    {
        [Required(ErrorMessage = "C贸digo 茅 obrigat贸rio")]
        [StringLength(6, MinimumLength = 6, ErrorMessage = "C贸digo deve ter 6 d铆gitos")]
        [RegularExpression(@"^\d{6}$", ErrorMessage = "C贸digo deve conter apenas n煤meros")]
        public string Code { get; set; } = string.Empty;
    }
}
